<sv:node xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
         xmlns:mix="http://www.jcp.org/jcr/mix/1.0"
         xmlns:sv="http://www.jcp.org/jcr/sv/1.0"
         xmlns:h="http://www.onehippo.org/jcr/xmlimport"
         sv:name="cms-reports" h:merge="combine">
  <sv:node sv:name="todoReport" h:merge="combine">
    <sv:node sv:name="reporting:listener" h:merge="combine">
      <sv:property sv:name="frontend:nodetypes" sv:type="String" h:merge="override">
        <sv:value>hippostdpubwf:request</sv:value>
      </sv:property>
    </sv:node>
    <sv:node sv:name="reporting:query" h:merge="combine">
      <sv:property sv:name="jcr:statement" sv:type="String" h:merge="override">
        <!-- As per request of HREPTWO-3159 also display rejected requests -->
        <sv:value>SELECT * FROM hippostdpubwf:request</sv:value>
      </sv:property>
    </sv:node>
  </sv:node>
</sv:node>
